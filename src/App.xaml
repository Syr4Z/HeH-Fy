<Application x:Class="Hehfy.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Hehfy"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="BorderBrush" Value="{x:Null}"></Setter>
            <Setter Property="Foreground" Value="#FF333333"></Setter>
            <Setter Property="Padding"  Value="10,5,10,5"></Setter>
        </Style>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}" x:Key="Style_BTN_Gris">
            <Setter Property="Background" Value="#FFCCCCCC"></Setter>
            <Setter Property="Foreground" Value="#FFB90600"></Setter>
        </Style>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}" x:Key="Style_BTN_Rouge">
            <Setter Property="Background" Value="#FFB90600"></Setter>
            <Setter Property="Foreground" Value="#FFCCCCCC"></Setter>
        </Style>
    </Application.Resources>
</Application>
